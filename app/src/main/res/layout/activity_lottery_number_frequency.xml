<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".LotteryNumberFrequencyActivity">

	<TextView
		android:id="@+id/txtViewFrequencyNumberTitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="10dp"
		android:background="@color/Aqua"
		android:textAlignment="center"
		android:textSize="30sp"
		android:textStyle="bold"
		android:text="@string/frequency_numbers" />
	<Button
		android:id="@+id/btnFrequentNumbers"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txtViewFrequencyNumberTitle"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="10dp"
		android:text="RETRIEVE FREQUENT NUMBERS"
		android:textColor="@color/colorPrimaryDark"
		android:textSize="20sp"
		android:textStyle="bold"
		android:visibility="invisible" />


	<CheckBox
		android:id="@+id/chbxTypeOfNumbers"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/txtViewFrequencyNumberTitle"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="20dp"
		android:layout_marginRight="10dp"
		android:background="@color/Aqua"
		android:checked="false"
		android:clickable="true"
		android:text="@string/check_for_Mega"
		android:textSize="20sp" />
	<FrameLayout
		android:id="@+id/myQueryFrame"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/chbxTypeOfNumbers"
		android:layout_alignParentBottom="true"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="20dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="15dp"
		android:background="@color/Aqua">

	</FrameLayout>



</RelativeLayout>