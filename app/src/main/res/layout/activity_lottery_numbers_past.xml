<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".LotteryNumberPastActivity">


	<TextView
		android:id="@+id/txtViewPastNumberTitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/Aqua"
		android:layout_centerHorizontal="true"
		android:text="@string/past_numbers"
		android:textAlignment="center"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:textSize="30sp"
		android:textStyle="bold" />

	<Button
		android:id="@+id/btnPastNumbers"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txtViewPastNumberTitle"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="10dp"
		android:text="RETRIEVE PAST NUMBERS"
		android:textColor="@color/colorPrimaryDark"
		android:textSize="20sp"
		android:textStyle="bold"
		android:visibility="invisible" />

	<FrameLayout
		android:id="@+id/myDisplayFrame"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/txtViewPastNumberTitle"
		android:layout_alignParentBottom="true"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="15dp"
		android:background="@color/Aqua">

	</FrameLayout>



</RelativeLayout>


