<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/numberFragment"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	tools:context=".myFragments.NumberFragment">

	<!-- TODO: Update blank fragment layout -->

	<LinearLayout

		android:id="@+id/numberstext"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_marginTop="5dp"
		android:layout_marginEnd="10dp"
		android:layout_marginRight="10dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/txtViewMyNumbers"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="100dp"
			android:text="Numbers"
			android:textSize="25sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/txtViewMyMegaNumber"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="60dp"
			android:text="MEGA"
			android:textSize="25sp"
			android:textStyle="bold" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/numbersLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/numberstext"
		android:layout_alignParentEnd="true"
		android:layout_marginStart="10dp"
		android:layout_marginTop="5dp"
		android:layout_marginEnd="10dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/num1"
			android:layout_width="35dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="5dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/circlentext"
			android:text="00"
			android:textColor ="@color/White"
			android:textAlignment="center"
			android:textSize="30sp" />

		<TextView
			android:id="@+id/num2"
			android:layout_width="35dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="15dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/circlentext"
			android:text="00"
			android:textColor ="@color/White"
			android:textAlignment="center"
			android:textSize="30sp" />


		<TextView
			android:id="@+id/num3"
			android:layout_width="35dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="15dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/circlentext"
			android:text="00"
			android:textColor ="@color/White"
			android:textAlignment="center"
			android:textSize="30sp" />


		<TextView
			android:id="@+id/num4"
			android:layout_width="35dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="15dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/circlentext"
			android:text="00"
			android:textColor ="@color/White"
			android:textAlignment="center"
			android:textSize="30sp" />

		<TextView
			android:id="@+id/num5"
			android:layout_width="35dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="15dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/circlentext"
			android:text="00"
			android:textColor ="@color/White"
			android:textAlignment="center"
			android:textSize="30sp" />

		<TextView
			android:id="@+id/numMega"
			android:layout_width="35dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="35dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/circlentextblue"
			android:text="00"
			android:textColor ="@color/White"
			android:textAlignment="center"
			android:textSize="30sp" />

	</LinearLayout>


</RelativeLayout>